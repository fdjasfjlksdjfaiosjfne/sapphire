                    "default": true
                },
                "hexadecimal": {
                    "type": "boolean",
                    "default": true
                },
                "decimal": {
                    "type": "boolean",
                    "default": true
                },
                "binary": {
                    "type": "boolean",
                    "default": true
                }
            },
            "additionalProperties": false
        },
        "scientificNotation": {
            "type": "boolean",
